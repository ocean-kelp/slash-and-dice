# Better Auth - generate with: openssl rand -base64 33
BETTER_AUTH_SECRET=your_auth_secret_here
BETTER_AUTH_URL=http://localhost:8000
# Comma-separated list of trusted origins for auth callbacks and CSRF
# Example (dev): http://localhost:5173,http://localhost:3000
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:3000

# Discord OAuth - https://discord.com/developers/applications
DISCORD_CLIENT_ID=
