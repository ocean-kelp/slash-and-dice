LINE_ID_CLIENT_SECRET=

# WeChat OAuth - https://open.weixin.qq.com/?lang=en
WECHAT_CLIENT_ID=
WECHAT_CLIENT_SECRET=

# Maximum number of in-memory metrics to retain (defaults to 100000 in prod, 100 in dev)
